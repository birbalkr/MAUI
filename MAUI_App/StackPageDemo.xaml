             x:Class="MAUI_App.StackPageDemo"
             Title="StackPageDemo">
    <StackLayout Spacing="12">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="FillAndExpand" BackgroundColor="Orange"/>
