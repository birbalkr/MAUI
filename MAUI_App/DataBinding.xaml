<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_App.DataBinding"
             xmlns:EmpModel="clr-namespace:MAUI_App.Models"
             Title="DataBinding">
    <ContentPage.Resources>
        <EmpModel:Employee x:Key="employee" Name="Birbal" Id="2" Age="20"/>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Label x:Name="EmployeeLbl"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="{Binding Name, Source={StaticResource employee}}"
               VerticalOptions="Center" HorizontalOptions="Center"/>
        <Button Text="change name" Clicked="Button_Clicked" VerticalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>