<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_App.MVVM.Views.ClothLenear"
             Title="ClothLenear">
    <CollectionView ItemsSource="{Binding Products}">
        <CollectionView.ItemsLayout>
            <!--<LinearItemsLayout ItemSpacing="50" Orientation="Vertical"/>-->
            <GridItemsLayout Orientation="Horizontal"/>
        </CollectionView.ItemsLayout>
        
        <CollectionView.ItemTemplate>
            <DataTemplate>
                
                    <Frame HeightRequest="250"
                               HasShadow="True" CornerRadius="10">

                        <VerticalStackLayout>
                        <Image Source="{Binding Image}" WidthRequest="100" HeightRequest="100" />
                        <Label Text="{Binding Title}"  VerticalOptions="Center"  HorizontalOptions="Center"/>
                        </VerticalStackLayout>

                    </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>