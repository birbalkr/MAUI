<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_App.MVVM.Views.ConverterExample"
             xmlns:convert="clr-namespace:MAUI_App.MVVM.ViewModels"
             Title="ConverterExample">
    <ContentPage.Resources>
        <convert:BoolConverter x:Key="boolconvert"/>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <CheckBox 
            IsChecked="{Binding Person.Married, Converter={StaticResource boolconvert}}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="Married?" VerticalOptions="Center" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>