<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_App.MVVM.Views.ClothPage"
             Title="ClothPage">
    <CollectionView ItemsSource="{Binding Products}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Margin="10,10,10,0"
                      RowDefinitions="*,*"
                      ColumnDefinitions=".1*,.2*,.7*">
                    <Frame
                        Grid.ColumnSpan="2"
                        Grid.RowSpan="2"
                        Grid.Column="1"/>
                    <Image HeightRequest="100" Source="{Binding Image}"
                           Grid.ColumnSpan="2" Grid.RowSpan="2"/>
                    <Label Text="{Binding Title}" Grid.Column="2" Grid.Row="1"  VerticalOptions="Center" />
                    <Label Text="{Binding Price, StringFormat='{0:â‚¹ 0}' }"
                           Grid.Column="2" Grid.Row="2" VerticalOptions="Center"/>

                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>