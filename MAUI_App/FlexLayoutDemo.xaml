<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_App.FlexLayoutDemo"
             Title="FlexLayoutDemo">
    <FlexLayout Direction="Column">
        <Label Text="Header" HorizontalTextAlignment="Center" BackgroundColor="Blue"/>
        <FlexLayout FlexLayout.Grow="1">
            <Label Text="content" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FlexLayout.Grow="1" BackgroundColor="Green"/>
            <BoxView FlexLayout.Order="-1" FlexLayout.Basis="50" Color="red"/>
            <BoxView FlexLayout.Basis="50" Color="Orange"/>
        </FlexLayout>
        <Label Text="footer" HorizontalTextAlignment="Center" BackgroundColor="Gray"/>
    </FlexLayout>
</ContentPage>